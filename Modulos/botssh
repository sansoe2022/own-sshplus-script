echo "    ╰━━━━━━━┳━━━━━┳━━━━━━━━╯ "
echo "    ╭━━━━━━━┻━━━━━┻━━━━━━━━╮ "
echo "    ┣လက်ရှိတွင် ဦးရေ 252 ဦးနှင့် ချိတ်ဆက်ထားသည် "
echo "    ╰━━━━━━━━━━━━━━━━━━━━━━╯ "

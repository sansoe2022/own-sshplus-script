echo "    ╰━━━━━━━┳━━━━━┳━━━━━━━━╯ "
echo "    ╭━━━━━━━┻━━━━━┻━━━━━━━━╮ "
echo "    ┣ လက်ရှိတွင် ဦးရေ 126 ဦးနှင့် ချိတ်ဆက်ထားသည် "
echo "    ╰━━━━━━━━━━━━━━━━━━━━━━╯ "
;;

03 | 3 )
cat > /etc/openvpn/server.conf <<-END

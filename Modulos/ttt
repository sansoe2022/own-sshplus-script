echo " ┈╰━━━━━━━┳━━━━━┳━━━━━━━━╯ "
echo " ┈╭━━━━━━━┻━━━━━┻━━━━━━━━╮ "
echo " ┈┣  🕰 ၁ လ တခါ 🕰 "
echo " ┈╰━━━━━━━━━━━━━━━━━━━━━━╯ "
service cron restart;;
  04 | 4 )
clear
  echo " "
  echo " ┈╭━━━━━━━━━━━━━━━━━━━━━━╮ "

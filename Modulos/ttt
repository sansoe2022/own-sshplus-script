echo " ┈┣  🕰 5. အလိုအလျောက် ပြန်လည်စတင်ခြင်းကို ပိတ်ပါ "
echo " ┈╰━━━━━━━━━━━━━━━━━━━━━━╯"
echo " "
read -p " ┈┣  အမျိုးအစားရွေးပါ : " opcao
else
opcao=$1
fi
case $opcao in
  01 | 1 )
  echo " 00 1 * * * root /sbin/reboot" > /etc/cron.d/reboot
clear
cr
echo " ┈╭━━━━━━━━━━━━━━━━━━━━━━╮ "
echo " ┈┣  🕰 vps ပြန်လည်စတင်ရန် အချိန်သတ်မှတ်ပါ 🕰 "
echo " ┈╰━━━━━━━┳━━━━━┳━━━━━━━━╯ "
echo " ┈╭━━━━━━━┻━━━━━┻━━━━━━━━╮ "
echo " ┈┣  🕰 နေ့တိုင်း မနက် 1 နာရီ ထိုး 🕰 "
echo " ┈╰━━━━━━━━━━━━━━━━━━━━━━╯ "
service cron restart;;
  02 | 2 )
  echo " 0 0 * * 0 root /sbin/reboot" > /etc/cron.d/reboot
clear
cr
echo " ┈╭━━━━━━━━━━━━━━━━━━━━━━╮ "
echo " ┈┣  🕰 vps ပြန်လည်စတင်ရန် အချိန်သတ်မှတ်ပါ 🕰 "
echo " ┈╰━━━━━━━┳━━━━━┳━━━━━━━━╯ "
echo " ┈╭━━━━━━━┻━━━━━┻━━━━━━━━╮ "
echo " ┈┣  🕰 ၇ ရက်တိုင်း 🕰 "
echo " ┈╰━━━━━━━━━━━━━━━━━━━━━━╯ "
service cron restart;;
  03 | 3 )
  echo " 0 0 1 * * root /sbin/reboot" > /etc/cron.d/reboot
clear
cr
